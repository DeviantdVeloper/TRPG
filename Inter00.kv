#:kivy 1.8.0
#:import random random

<ScatterTextWidget>:
	orientation: 'vertical'
	TextInput:
		id: myTextInput
		font_size: 75
		size_hint_y: None
		height: 100
		text: 'default'
		on_text: my_label.color = [random.random() for i in range(3)] + [1]
	FloatLayout:
		Scatter:
			Label:
				id: my_label
				text: myTextInput.text
				font_size: 100
