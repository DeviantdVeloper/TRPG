#:kivy 1.8.0
#:import random random

<InterScreenWidget>:
	id: 'screen'
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: 0, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		id: optionsBox
		size_hint: None, None
		size: root.size[0], 35
		orientation: 'horizontal'
		canvas.before:
			Color:
				rgba: 0.5, 0.5, 0.5, 1
			Rectangle:
				pos: self.pos
				size: self.size
		Label:
			text: 'options'
			font_size: 20
			color: 1,1,1,1
			size: self.texture_size
	BoxLayout:
		id: playAreaBox
		orientation: 'horizontal'
		canvas.before:
			Color:
				rgba: 0, 0, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size
		BoxLayout:
			id: statsAndGraphicBox
			size_hint: None, None
			size: 200, playAreaBox.size[1]
			orientation: 'vertical'
			canvas:
				Color:
					rgba: 0, 0, 0, 1
				Rectangle:
					pos: self.pos
					size: self.size
			BoxLayout:
				id: statsBox
				orientation: 'vertical'
				canvas:
					Color:
						rgba: 0, 1, 0, 0.5
					Rectangle:
						pos: self.pos
						size: self.size
				StatBlockWidget:
				StatBlockWidget:
				StatBlockWidget:
				StatBlockWidget:
				BoxLayout:
					size_hint: None, None
					size: statsBox.size[0], 20
			BoxLayout:
				id: graphicsBox
				size_hint: None, None
				size: 200, 200
				orientation: 'vertical'
				canvas:
					Color:
						rgba: 1, 0, 0, 0.5
					Rectangle:
						pos: self.pos
						size: self.size
				Label:
					text: 'graphic'
					font_size: 45
					color: 1,1,1,1
					size: self.texture_size
		BoxLayout:
			id: contentAndButtonsBox
			orientation: 'vertical'
			canvas:
				Color:
					rgba: 0, 0, 0, 1
				Rectangle:
					pos: self.pos
					size: self.size
			BoxLayout:
				id: contentBox
				orientation: 'vertical'
				canvas:
					Color:
						rgba: 1, 1, 1, 1
					Rectangle:
						pos: self.pos
						size: self.size
				ContentBlockWidget:
					id: CONTENT
					text: 'words and '
			BoxLayout:
				id: buttonsBox
				size_hint: None, None
				size: contentAndButtonsBox.size[0], 200
				orientation: 'vertical'
				canvas:
					Color:
						rgba: 0, 0, 1, 1
					Rectangle:
						pos: self.pos
						size: self.size
				ButtonBlockWidget:
					id: BUTTONS
					ActionButton:
						id: btn
						text: 'BuToN'
						on_press: root.BtnHit()

<StatBlockWidget>
	orientation: 'vertical'
	size_hint: None, None
	size: root.size[0], 75
	canvas:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: 175, 25
	Label:
		text: 'stat'
		font_size: 25
		color: 1,1,1,1
		size: self.texture_size

<ContentBlockWidget>
	id: CONTENT
	Label:
		text: CONTENT.text
		text_size: self.width, None
		size_hint_y: None
		height: self.texture_size[1]
		font_size: 15
		color: 0,0,0,1
		size: self.texture_size

<ButtonBlockWidget>
	canvas:
		Color:
			rgba: 0,0,0,1
		Rectangle:
			pos: self.pos
			size: self.size

<ActionButton>
	canvas.before:
		Color:
			rgba: 0.5,0.5,0.5,1
		Rectangle:
			pos: self.pos
			size: self.size
	font_size: 15
	size_hint: None, None
	size: 85, 30
	color: 1,1,1,1
